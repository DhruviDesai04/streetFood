<section class="cart py-16">
    <% if(session.cart) { %>
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cartBlack.png" alt="cart">
            <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
        </div>
        <div class="orders">
            <% for(let food of Object.values(session.cart.items)) { %>
            <div class="flex items-center my-8">
                <img class="w-24 rounded-2xl" src="/img/<%= food.items.image%>" alt="">
                <div class="flex-1 ml-4">
                    <h1><%= food.items.name%></h1>
                    <span><%= food.items.quantity%></span>
                </div>
                <span class="flex-1"><%= food.qty%> Pcs</span>
                <span class="font-bold text-lg">â‚¹<%= food.items.price * food.qty%></span>
            </div>
            <% } %>
        </div>

        <hr>
        <div class="py-4 text-right">
            <div>
                <span class="text-lg font-bold">Total Amount:</span>
                <span class="amount text-2xl font-bold ml-2">â‚¹<%= session.cart.totalPrice %></span>
            </div>
            <div>
                <form action="" class="mt-12">
                    <input class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone number">
                    <input class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Address">
                    <div>
                        <button type="submit" class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Order Now</button>
                    </div>
                </form>
            </div>
            <!-- <a href="" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">login to continue</a> -->
        </div>
    </div>
    <% } else { %>
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center justify-between">
            <div class="leading-loose">
                <h1 class="text-4xl font-black mb-2 tracking-widest">Cart Empty!ðŸ˜•</h1>
                <h3 class="text-lg text-gray-500 font-normal italic tracking-wider">
                Isn't Looking Empty?
                </h3>
                <p class="font-bold tracking-wide text-2xl">
                Yes, Bcz You haven't ordered any delicious yet.
                </p>
                <h3 class="text-gray-500 font-medium text-lg mb-12 tracking-wider">
                To order deliciousðŸ˜‹, Go to the main page. 
                </h3>
            </div>
            <img class="w-1/4 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
            <a href="/" class="inline-block px-8 py-3 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
        </div>
    </div>
    <% } %>
</section>