<section class="status p-5">
  <div class="container mx-auto">
    <div class="status-box w-full lg:w-2/3 mx-auto">
      <div class="flex items-center justify-between mb-12">
        <h1 class="text-2xl font-bold">
          Hey, Track Your Delivery Status Here!
        </h1>
        <h6 class="py-1 ml-3 rounded-full px-4 bg-red-50 text-red-700 text-xs">
          <%= order._id %>
        </h6>
        <input
          id="hiddenInput"
          type="hidden"
          value="<%= JSON.stringify(order) %> "
        />
      </div>
      <ul>
        <li
          class="status_line text-base md:text-lg lg:text-xl pb-16"
          data-status="order_placed"
        >
          <span>Order Placed</span>
        </li>
        <li
          class="status_line text-base md:text-lg lg:text-xl pb-16"
          data-status="confirmed"
        >
          <span>Order Confirmed</span>
        </li>
        <li
          class="status_line text-base md:text-lg lg:text-xl pb-16"
          data-status="prepared"
        >
          <span>Order Prepared</span>
        </li>
        <li
          class="status_line text-base md:text-lg lg:text-xl pb-16"
          data-status="delivered"
        >
          <span>Out for Delivery</span>
        </li>
        <li
          class="status_line text-base md:text-lg lg:text-xl"
          data-status="completed"
        >
          <span>Completed</span>
        </li>
      </ul>
    </div>
  </div>
</section>
